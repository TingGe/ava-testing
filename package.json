{
  "private": false,
  "name": "ava-testing",
  "version": "0.0.3",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TingGe/ava-testing.git"
  },
  "scripts": {
    "dev": "webpack --mode development --env.dist=false --config config/webpack.dev.config.js",
    "dev:dist": "webpack --mode development",
    "build": "webpack --mode production --config config/webpack.prod.config.js",
    "precommit": "lint-staged",
    "test": "source test.sh",
    "prebuild": "npm run test",
    "lint:fix": "prettier --write './src/**/*.{ts,tsx,js,scss}' && tslint -c tslint.json --fix './src/**/*.{js,ts,tsx}'",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test:watch": "tsc --watch | ava --watch"
  },
  "dependencies": {
    "@reach/router": "^1.1.1",
    "@rematch/core": "^1.0.0-beta.2",
    "@rematch/select": "^1.0.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7"
  },
  "devDependencies": {
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.2",
    "ava": "^0.25.0",
    "circular-dependency-plugin": "^5.0.2",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "exports-loader": "^0.7.0",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "^4.3.1",
    "imagemin-lint-staged": "^0.3.0",
    "jsdom": "^11.11.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5",
    "prettier-stylelint": "^0.4.2",
    "react-polyfills": "^0.0.1",
    "react-test-renderer": "^16.4.1",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "sinon": "^6.0.0",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "stylelint": "^9.3.0",
    "stylelint-config-idiomatic-order": "^5.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.1.3",
    "tap-that-html": "^1.0.1",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-serve": "^1.0.4",
    "webpackbar": "^2.6.1"
  },
  "lint-staged": {
    "{src,docs}/**/*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "tslint -c tslint.json --fix",
      "tslint -c tslint.json",
      "git add"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint -q -s scss --fix",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "author": "TingGe<505253293@163.com>",
  "license": "MIT"
}
